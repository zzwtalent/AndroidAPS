<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Small screen device (smartwatch) color palette -->
    
    <!-- Primary colors -->
    <color name="colorPrimary">@color/colorPrimary</color>
    <color name="colorPrimaryDark">@color/colorPrimaryDark</color>
    <color name="colorAccent">@color/colorAccent</color>
    
    <!-- Text colors optimized for small screens -->
    <color name="text_primary">#000000</color> <!-- Black text for better readability on small screens -->
    <color name="text_secondary">#333333</color>
    <color name="text_hint">#757575</color>
    
    <!-- Background colors -->
    <color name="background_primary">#FFFFFF</color> <!-- White background for better contrast -->
    <color name="background_secondary">#F5F5F5</color>
    <color name="background_card">#FFFFFF</color>
    
    <!-- UI element colors -->
    <color name="divider">#EEEEEE</color>
    <color name="ripple_color">#20000000</color>
    <color name="disabled_color">#9E9E9E</color>
    
    <!-- Highlight and error colors -->
    <color name="success_color">#4CAF50</color>
    <color name="warning_color">#FFC107</color>
    <color name="error_color">#F44336</color>
    <color name="info_color">#2196F3</color>
</resources>